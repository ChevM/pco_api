# Server configuration
server.port=8080
server.servlet.context-path=/pco-lyrics-viewer

# PCO API configuration
pco.api.base-url=https://api.planningcenteronline.com
pco.api.app-id=YOUR_APP_ID_HERE
pco.api.secret=YOUR_SECRET_HERE

# Logging configuration
logging.level.root=INFO
logging.level.com.pco.lyrics=DEBUG
logging.level.org.springframework.web=INFO

# Actuator configuration
management.endpoints.web.exposure.include=health,info,metrics

# OpenAPI configuration
springdoc.api-docs.path=/api-docs
springdoc.swagger-ui.path=/swagger-ui.html

# Spring configuration
spring.application.name=PCO Lyrics Viewer 